<% include partials/header %>
	<div class="container" style="margin:0 auto;width:50%">
		<form action="/added" method="POST">
			<h1 style="text-align:center">Add the To-Dos</i></h1>
			<div class="form-group">
            	<input class="form-control" type="text" name="toDoInput" placeholder="Add New Todo                       - Click Submit" style="text-align:center;font-size:30px;font-weight:bold">
            </div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
	        </div>
		</form>
	</div>
	<% if(typeof(allToDosFound)=='defined') { %>
	<% allToDosFound.forEach(function(eachToDo){%>
	<div id="container">
	<ul>
    	<h2 style="display:inline"><%= eachToDo["toDoContent"] %></h2>
        <a class="btn btn-xs btn-warning" href="/showAllToDos/<%= eachToDo._id %>/edit" style="display:inline">Edit</a>
        <form class="delete-form" action="/showAllToDos/<%= eachToDo._id %>?_method=DELETE" method="POST" style="display:inline">
            <input type="submit" class="btn btn-xs btn-danger" value="Delete">
        </form>
	</ul>
	</div>
	<% }) }%>
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>