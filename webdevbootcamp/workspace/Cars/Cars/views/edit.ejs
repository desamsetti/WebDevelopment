<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create a New Campground</h1>
        <div style="width:30%;margin:25px auto;">
            <form action="/carsdisplay/<%= car._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" name="car[company]" value="<%= car.company %>" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="car[name]" value="<%= car.name %>" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="car[price]" value="<%= car.price %>" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="car[image]" value="<%= car.image %>" class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit">
                </div>
            </form>
            <a href="/carsdisplay">Go Back</a>
        </div>
        
        
    </div>
</div>
<% include partials/footer %>

